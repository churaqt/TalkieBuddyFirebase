<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state - Same purple as UPDATE button -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#6A1B9A"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#4A148C"/>
        </shape>
    </item>

    <!-- Pressed/Hover state - Light purple -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E1BEE7"/>
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#6A1B9A"/>
        </shape>
    </item>

    <!-- Normal state - White background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#DDDDDD"/>
        </shape>
    </item>

</selector>